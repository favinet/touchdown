                <li><a href="#.">지자체코드관리</a></li>
            </ul>

        </div -->
        <!-- 왼쪽 메뉴 끝 -->
        <!-- 오른쪽 컨텐츠 시작 -->
        <div class="right-area" style="margin-left:0px;">
            <form method="POST" action="/srv/<%=objname%>/update_popup" name = "mainForm"  id="mainForm">
                <h3>광고 등록</h3>
                <div class="btn-write">
                    <a href="javascript:formSubmit();" class="btn-blue">저장</a>
                    <a href="javascript:formDelete('/srv/<%=objname%>/delete_popup/<%=_id%>');" class="btn-gray">삭제</a>
                    <a href="javascript:history.back();" class="btn-blue">리스트</a>
                </div>
                <h4>정보 입력</h4>
                <table class="table-basic td-al th-al td-pd10" summary="카드등록">

                    <caption>카드 등록</caption>
                    <colgroup>
                        <col width="30%"/>
                        <col width="70%"/>
                    </colgroup>

                    <tr>
                        <th>아이디</th>
                        <td !colspan="2"><input type="text" class="input-default w100p" name="_id" id="_id" value="<%=_id%>"  readonly /></td>
                    </tr>
                    <tr>
                        <th>보안카드번호</th>
                        <td !colspan="2"><input type="text" class="input-default w100p" name="excard" id="excard" value="<%=excard%>" /></td>
                    </tr>
                    <tr>
                        <th>가상카드번호</th>
                        <td !colspan="2"><input type="text" class="input-default w100p" name="vcard" id="vcard" value="<%=vcard%>" /></td>
                    </tr>
                    <tr>
                        <th>사용여부</th>
                        <td !colspan="2">
                            <select name="useyn" id="useyn" class="input-default w130">
                                <option value="1" <% if (useyn == true) { %> selected<% } %>>예</option>
                                <option value="0" <% if (useyn == false) { %> selected<% } %>>아니오</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th>회원아이디</th>
                        <td !colspan="2"><input type="text" class="input-default w150" name="cobjnm" id="cobjnm"  value="<%=cobjnm%>" readonly />&nbsp;&nbsp;<a href="javascript:openUser();" class="btn-blue">회원선택</a></td>
                        <input type="hidden" name="cobjid" id="cobjid"  value="<%=cobjid%>"/>
                    </tr>
                    <tr>
                        <th>카드회사</th>
                        <td !colspan="2"><input type="text" class="input-default w100p" name="company" id="company"  value="<%=company%>"/></td>
                    </tr>
                    <tr>
                        <th>포인트</th>
                        <td !colspan="2"><input type="text" class="input-default w100p" name="point" id="point"  value="<%=point%>"/></td>
                    </tr>
                    <tr>
                        <th>공항철도사용가능</th>
                        <td !colspan="2">
                            <select name="arexyn" id="arexyn" class="input-default w130">
                                <option value="1" <% if (arexyn == true) { %> selected<% } %>>예</option>
                                <option value="0" <% if (arexyn == false) { %> selected<% } %>>아니오</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th>글쓴이</th>
                        <td !colspan="2"><input type="text" class="input-default w150" name="uobjnm" id="uobjnm" value="<%=uobjnm%>"/></td>
                        <input type="hidden" name="uobjid" id="uobjid" value="<%=uobjid%>"/>
                    </tr>
                </table>

                <input type="hidden" name="_id" id="_id" value="<%=_id%>" />
            </form>
        </div> <!-- right content-->
    </div> <!-- container -->
</div>  <!-- wrap -->
</body>
