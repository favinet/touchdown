<!doctype html>
<html lang="ko">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>터치다운 CMS</title>
    <link rel="stylesheet" href="http://cms.mobile1.kr/html/css/admin.css" type="text/css" />
    <script src="http://cms.mobile1.kr/html/js/jquery-1.8.3.min.js"></script>
    <script type="text/javascript">
        $(function(){
            $('.input-default').keydown(function(event) {
                if (event.keyCode == 13) {
                    formSubmit();
                    return false;
                }
            });
        });

        function formSubmit(){
            $("#mainForm").submit();
        }
    </script>

    </head>

    <body>
        <div id="wrap">
            <%- partial('../common/menu.ejs') %>
            <!-- 본문 시작 -->
            <div id="container" class="af_clear">
                <!-- 왼쪽 메뉴 시작 -->
                <%- partial('../common/leftmenu.ejs') %>
                <!-- 왼쪽 메뉴 끝 -->
                <!-- 오른쪽 컨텐츠 시작 -->
                <div class="right-area">

                    <h3>사용자 리스트</h3>

                    <form method="POST" action="/srv/<%=objname%>/list/0/1" name = "mainForm"  id="mainForm">
                        <div class="search gray-box af_clear">
                            <p>
                                광고명 : <input id="search" name="search" type="text" value="<%=search%>" class="input-default">
                            </p>
                            <p><a href="javascript:formSubmit();" class="btn-search">검색</a></p>
                        </div>
                    </form>

                    <!-- 리스트 시작 -->
                    <div class="list-style">
                        <div class="btn">
                            <a href="/srv/<%=objname%>/insert" class="btn-blue">관리자 추가</a>
                        </div>

                        <table class="table-basic" summary="게시판 리스트">
                            <caption>관리자 리스트</caption>
                            <colgroup>
                                <col width="">
                                <col width="">
                                <col width="">
                                <col width="">
                            </colgroup>
                            <tbody>
                            <tr>
                                <th>번호</th>
                                <th>아이디</th>
                                <th>이메일</th>
                                <th>회사명</th>
                            </tr>
                            <%
                            //{'objname':objname,'cur':cur,'pos':pos, 'cursize':cursize, 'possize':possize,  'tcnt': tcnt, 'data': docs, 'search': search}

                            if(tcnt == 0)
                            {
                            %>
                            <tr>
                                <td colspan="4">검색된 결과가 없습니다.</td>
                            </tr>
                            <%
                            }
                            else
                            {
                            var index = (pos * possize + (cur - 1)) * cursize;

                            for( var i = 0 ; i < data.length ; i++)
                            {
                                var obj = data[i];
                                var curindex = index + i;
                            %>
                            <tr>
                                <td><%=curindex%></td>
                                <td><a href="/srv/<%=objname%>/select/<%=obj.uid%>"><%=obj.uid%></a></td>
                                <td><%=obj.email%></td>
                                <td><%=obj.company%></td>
                            </tr>
                            <%
                            }
                            }
                            %>
                            </tbody>
                        </table>

                    </div>
                    <!-- 리스트 시작 //-->


                    <%- partial('../common/paging.ejs') %>
                    <!--
                    <p><a href="/srv/<%=objname%>/insert">사용자추가</a></p>
                    <p><a href="/srv/user/logout">로그아웃</a></p>
                    -->
                </div> <!-- right content -->
            </div> <!-- container -->
        </div> <!--wrap -->
    </body>
</html>